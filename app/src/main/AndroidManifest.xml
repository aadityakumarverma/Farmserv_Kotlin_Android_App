<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.farmserv">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_farm"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_farm"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmServ"
        tools:targetApi="31">
        <activity
            android:name=".SetLanguage"
            android:exported="false" />
        <activity
            android:name=".Location"
            android:exported="false" />
        <activity
            android:name=".Categories"
            android:exported="false" />
        <activity
            android:name=".ProductDetails"
            android:exported="false" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Registration"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectRole"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OTP_Verification"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserLogin"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>