<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/ll_row"
            android:background="@color/dull_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_product"
                android:src="@drawable/productimage1"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="5dp"
                android:paddingTop="5dp"
                android:lines="2"
                android:textColor="@color/black"
                android:text="NPK Fertilizer and related name will come"
                android:textSize="13dp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@+id/iv_product"/>

            <LinearLayout
                android:id="@+id/ll_price"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:text="@string/price_npk"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:background="@color/white"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:text="1Kg"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_counter"
                android:weightSum="5"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ll_price"
                >

                <LinearLayout
                    android:layout_weight="4"
                    android:gravity="center"
                    android:background="@drawable/counter_bg"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:paddingVertical="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="left"
                        android:paddingRight="18dp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:text="-"/>
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0"/>

                    <TextView
                        android:id="@+id/tv_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:text="+"/>
                </LinearLayout>
                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/cb_product"
                    android:background="@drawable/cb_bg"
                    android:button="@android:color/transparent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="15dp"
                    android:layout_height="18dp"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:text="-10%"
    android:textSize="12dp"
    android:paddingVertical="2dp"
    android:paddingHorizontal="5dp"
    android:textColor="@color/white"
    android:background="@drawable/discount_bg"
    android:layout_marginRight="4dp"
    android:layout_marginTop="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"

    />
</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>