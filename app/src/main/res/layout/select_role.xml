<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRole">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/blue_action_bar"
        >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leaves"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_otpMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Role"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_logo"
        />
    <TextView
        android:id="@+id/tv_mobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:text="Please select your role and proceed"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        android:lines="1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_otpMessage"
        />

    <RadioGroup
        android:id="@+id/rg_selectRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mobileNumber"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:elevation="5dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/farmer"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_80sdp"/>
            <RadioButton
                android:id="@+id/rb_Farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/i_m_a_farmer"
                android:fontFamily="@font/roboto_regular"
                android:lines="1"
                android:background="@drawable/radio_selector1"
                android:drawableStart="@drawable/checked"
                android:paddingLeft="@dimen/_1sdp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:button="@android:color/transparent"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:textColor="@drawable/radio_color"
                android:elevation="4dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/_25sdp"
                android:elevation="5dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/deliverypartner"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_80sdp"/>

            <RadioButton
                android:id="@+id/rb_Partner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/radio_selector1"
                android:drawableStart="@drawable/checked"
                android:paddingLeft="@dimen/_1sdp"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:lines="1"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:text="@string/i_m_a_delivery_patner"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textColor="@drawable/radio_color" />
        </androidx.cardview.widget.CardView>
    </RadioGroup>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_GetIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="OK Get In"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:background="@drawable/button_bg"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@+id/rg_selectRole"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>